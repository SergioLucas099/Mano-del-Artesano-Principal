<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GestionarTurnos"
    android:layout_margin="20dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/atrasGestionTurnos"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_back"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seleccionar Atraccion"
        android:textAlignment="center"
        android:textSize="30sp"
        android:layout_marginTop="20dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RevVerAtraccion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/AtraccionSeleccionada"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nada Selecionado"
        android:textAlignment="center"
        android:textSize="27sp"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Numero de Personas"
        android:textAlignment="center"
        android:textSize="27sp"
        android:layout_marginTop="20dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ImagenProductoMesa"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <ImageView
            android:id="@+id/disminuir"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_marginEnd="10sp"
            android:src="@drawable/baseline_remove_circle_outline_24" />

        <TextView
            android:id="@+id/ContadorPersonas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="1"
            android:textSize="35sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/agregar"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_marginStart="10sp"
            android:src="@drawable/baseline_add_circle_outline_24" />

    </LinearLayout>

    <TextView
        android:id="@+id/txtTiempo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tiempo: 00:20 seg"
        android:textAlignment="center"
        android:textSize="22sp"
        android:layout_marginTop="20dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputLayoutPhone"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Numero Telefonico Cliente"
        app:startIconDrawable="@drawable/outline_contact_phone_24">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtxNumero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnSubirInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Subir"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:layout_marginTop="50dp" />

</LinearLayout>